<p id="notice"><%= notice %></p>

<p>
  <strong>Data: <%= data_br(Date.today) %></strong>
</p>

<h1><%=t('text.coins') %></h1>

<table class="table table-dark table-hover">
  <thead>
  <tr>
    <th><%= @coins.human_attribute_name(:description) %></th>
    <th><%= @coins.human_attribute_name(:acronym) %></th>
    <th><%= @coins.human_attribute_name(:image) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
      <td><%= link_to t('links.show'), coin, class: 'btn btn-outline-primary btn-sm' %></td>
      <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
      <td><%= link_to t('links.delete'), coin, method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: 'Esta certo disso?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new.coin'), new_coin_path, class: "btn btn-primary" %><br>
<%= link_to t('text.back'), root_path, class: "btn btn-primary btn-sm" %>
