<p id="notice"><%= notice %></p>

<h1><%= t('text.mining_types') %></h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: t('text.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new.mining_type'), new_mining_type_path, class: "btn btn-primary btn-sm"%><br>
<%= link_to t('text.back'), root_path, class: "btn btn-primary btn-sm"%>
